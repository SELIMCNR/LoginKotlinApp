<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00BCD4"/> <!-- Basıldığında renk -->
            <corners android:radius="8dp"/> <!-- Köşe yuvarlaklığı -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#2196F3"/> <!-- Normal renk -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Kenar çizgisi rengi ve genişliği -->
            <corners android:radius="8dp"/> <!-- Köşe yuvarlaklığı -->
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/> <!-- İç dolgu -->
        </shape>
    </item>
</selector>